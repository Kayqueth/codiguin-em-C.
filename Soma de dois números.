#include <stdio.h>

int main() {
    int num1, num2, soma;
    // Declaração das variáveis inteiras num1, num2 e soma

    printf("SOMA SIMPLES DE DOIS INTEIROS");

    // Solicita ao usuário a entrada de dois números inteiros
    printf("Digite o primeiro número: ");
    scanf("%d", &num1);

    printf("Digite o segundo número: ");
    scanf("%d", &num2);

    // Realiza a soma dos dois números e armazena o resultado na variável "soma"
    soma = num1 + num2;

    // Exibe na tela o resultado da soma
    printf("A soma dos dois números é: %d\n", soma);

    return 0; // Indica que o programa foi executado com sucesso
}
